<resources>

    <style name="AppTheme" parent="AppBaseTheme" />

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/lato</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/statusLight</item>
    </style>

    <style name="TextPrimary">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorHint">@color/textTertiary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextSecondary">
        <item name="android:textColor">@color/textTertiary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextTertiary">
        <item name="android:textColor">@color/textTertiary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DrawerRow">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="DrawerText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrawerIcon">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:tint">@color/textSecondary</item>
    </style>

</resources>
