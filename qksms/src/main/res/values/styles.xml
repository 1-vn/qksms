<resources>

    <style name="AppTheme" parent="AppBaseTheme" />

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/lato</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/statusLight</item>
    </style>

    <style name="TextPrimary">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorHint">@color/textTertiary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextSecondary">
        <item name="android:textColor">@color/textTertiary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextTertiary">
        <item name="android:textColor">@color/textTertiary</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
