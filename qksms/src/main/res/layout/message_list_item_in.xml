<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple"
    android:orientation="vertical"
    android:paddingBottom="16dp">

    <com.moez.QKSMS.presentation.common.widget.QkTextView
        android:id="@+id/timestamp"
        style="@style/TextSecondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        tools:text="Tue at 11:39pm" />

    <LinearLayout
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|bottom"
        android:orientation="horizontal"
        android:paddingEnd="60dp"
        android:paddingStart="12dp">

        <com.moez.QKSMS.presentation.common.widget.AvatarView
            android:id="@+id/avatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:id="@+id/messageBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_only"
            android:minHeight="36dp"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            tools:backgroundTint="@color/tools_theme">

            <com.moez.QKSMS.presentation.common.widget.TightTextView
                android:id="@+id/body"
                style="@style/TextPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:gravity="start|center_vertical"
                app:textColor="primaryOnTheme"
                tools:text="@tools:sample/lorem/random" />

            <TextView
                android:id="@+id/status"
                android:layout_width="0dp"
                android:layout_height="0dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>